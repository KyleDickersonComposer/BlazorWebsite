@inherits LayoutComponentBase

@inject IDialogService DialogServ


<PageTitle>BlazorTest</PageTitle>
<MudThemeProvider IsDarkMode="true" Theme="theme" />
<MudDialogProvider CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudAppBar Elevation="1">
    <MudText Typo="Typo.h5" Class="ml-3">Kyle Dickerson Composer</MudText>
    <MudSpacer />
    <MudIconButton Title="GitHub" href="https://www.github.com/kyledickersoncomposer"
        Icon="@Icons.Custom.Brands.GitHub">
    </MudIconButton>
</MudAppBar>
<MudLayout>
    <MudPaper Elevation="0">
        <MudMainContent>
            <MudContainer Class="pa-6" MaxWidth="MaxWidth.ExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>

        <MudMainContent Class="pa-0">
            <MudContainer MaxWidth="MaxWidth.Large">
                <MudStack Class="pb-16">
                    <MudDivider Class="my-6 mx-0" />
                    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                        <MudIconButton href="https://kyledickersoncomposer.com">Kyle Dickerson Composer</MudIconButton>
                        <MudIconButton href="https://dickersonaudio.com">Dickerson Audio</MudIconButton>
                        <MudIconButton href="https://github.com/kyledickersoncomposer">GitHub</MudIconButton>
                        <MudIconButton href="https://www.linkedin.com/in/kyle-dickerson-4b35b02b7/">LinkedIn
                        </MudIconButton>
                    </MudStack>
                </MudStack>
            </MudContainer>
        </MudMainContent>
    </MudPaper>
</MudLayout>

@code {
    private MudTheme theme = new();
}
